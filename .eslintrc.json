{
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "no-trailing-spaces": ["error"]
  }
}
